rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // FCM Tokens: Securely manage device registration tokens.
    // Users can create/update their own token document, but cannot read or delete any.
    // Deletion of stale tokens is handled by backend Cloud Functions.
    match /fcmTokens/{token} {
      allow read, delete: if false; // Disallow client-side reads and deletes
      allow create, update: if isOwner(request.resource.data.userId);
    }

    // Borrowers: Users can create, read, update, delete their own borrowers
    match /borrowers/{borrowerId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    // Loans: Users can manage their own loans
    match /loans/{loanId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    // Payments: Users can manage their own payments
    match /payments/{paymentId} {
       allow read, update, delete: if isOwner(resource.data.userId);
       allow create: if isOwner(request.resource.data.userId);
    }

    // Settings: Read-only for clients, updatable via backend/console or owner
    match /settings/{config} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && (resource.data.userId == request.auth.uid || request.resource.data.userId == request.auth.uid);
    }

    // Activity Logs: Users can read, update, and delete their own logs
    match /activityLogs/{logId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    // Guarantors: Users can manage their own guarantors
    match /guarantors/{guarantorId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    // Comments: Users can manage their own comments
    match /comments/{commentId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    // Expenses: Users can manage their own expenses
    match /expenses/{expenseId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    // Users: Users can read and write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
